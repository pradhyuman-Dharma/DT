<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Product Finder</title>
    </head>
    <body>
	<referenceBlock name="page.main.title" remove="true" />
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Home</item>
                    <item name="label" xsi:type="string" translate="true">Home</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Product Finder</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Product Finder</item>
                    <item name="label" xsi:type="string" translate="true">Product Finder</item>
                </argument>
            </action>
        </referenceBlock>
     </body>
    <referenceContainer name="content">
        <block class="Avologic\AdvanceSearch\Block\Index" name="advance_display" template="Avologic_AdvanceSearch::advance.phtml" />
    </referenceContainer>
</page>